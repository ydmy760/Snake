@model QAModel
@{
    ViewBag.Ref = "Create";
    ViewBag.Title = "创建提问";
}

<h3><strong>创建提问</strong></h3>
<form class="form-horizontal" method="post" action="Create_">
    
    
    <div class="form-group">
        <label for="question" class="col-sm-2 control-label">提问内容</label>
        <div class="col-sm-10">
            <textarea class="form-control" name="question" rows="5" MaxLength="500" required="required">请输入问题详细内容</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary"   >提交</button>

        </div>
    </div>
</form>