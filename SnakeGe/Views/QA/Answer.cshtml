@model QAModel
@{
    ViewBag.Ref = "QA/Answer";
    ViewBag.Title = "创建提问";
}

<h3><strong>回答问题</strong></h3>


<form method="post" action="Answer_">
    <div class="form-group">
        <div class="col-sm-10">
            <input type="text" style="display:none" name="question_id" class="form-control" value="@Model.ID_question" readonly />

        </div>
    </div>
    <div class="form-group">
        <label for="question" class="col-sm-2 control-label">@Model.question</label>
    </div>
    <div class="form-group">
        <label for="question" class="col-sm-2 control-label">回答内容</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="answer" rows="5" MaxLength="500" required="required">请输入回答详细内容</textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">查看</button>
        </div>
    </div>
</form>
