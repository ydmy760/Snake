@model BlogModel
@{
    ViewBag.Ref = "Blog";
    ViewBag.Title = "创建博客";
}

<h3><strong>创建博客</strong></h3>
<form class="form-horizontal" method="post" action="Create_">


    <div class="form-group">
        <label for="question" class="col-sm-2 control-label">博客标题</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="title" rows="2" MaxLength="20" required="required">请输入博客标题</textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="question" class="col-sm-2 control-label">博客内容</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="content" rows="50" MaxLength="500" required="required">请输入详细博客内容</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">提交</button>

        </div>
    </div>
</form>