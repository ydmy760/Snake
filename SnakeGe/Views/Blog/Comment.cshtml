@model CommentModel
@{
    ViewBag.Ref = "Blog/Comment";
    ViewBag.Title = "博客评论";
}

<h3><strong>添加评论</strong></h3>
<form class="form-horizontal" method="post" action="Comment_">


    <div class="form-group">
        <label for="question" class="col-sm-2 control-label">评论内容</label>
        <div class="col-sm-10">
            <textarea class="form-control" name="content" rows="5" MaxLength="50" required="required">请输入详细博客评论内容</textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <input type="text" style="display:none" name="blog_id" class="form-control" value="@Model.BlogID" readonly />

        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">评论</button>

        </div>
    </div>
</form>